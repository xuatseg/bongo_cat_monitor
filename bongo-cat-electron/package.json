{
  "name": "bongo-cat-electron",
  "version": "1.0.0",
  "description": "Cross-platform Bongo Cat desktop application for Mac and other platforms",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "dist": "electron-builder --publish=never"
  },
  "keywords": [
    "bongo-cat",
    "esp32",
    "desktop-app",
    "system-monitor",
    "keyboard-tracker"
  ],
  "author": "Bongo Cat Team",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "keypress": "^0.2.1",
    "node-global-key-listener": "^0.3.0",
    "serialport": "^12.0.0",
    "systeminformation": "^5.21.22"
  },
  "build": {
    "appId": "com.bongocat.electron",
    "productName": "Bongo Cat",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer/**/*",
      "src/**/*",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "type": "commonjs"
}
